<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.valentino.questionbank">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".shared.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shared.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".instructor.AddClassActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".shared.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".student.answer.AnswerQuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".instructor.AddQuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".instructor.AddFolderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".instructor.QuestionOverviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student.courses.JoinCourseActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".instructor.search.BrowseQuestionsActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>