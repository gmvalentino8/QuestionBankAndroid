<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".student.answer.InitialAnswerFragment"
    android:padding="10dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/questionLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question_label"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/AnswerLabel" />

                <TextView
                    android:id="@+id/questionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question"
                    android:paddingStart="0dp"
                    style="@style/AnswerText" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/answerACardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/answerALabel"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="@string/answer_a_label"
                    style="@style/AnswerLabel" />

                <TextView
                    android:id="@+id/answerATextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer A"
                    style="@style/AnswerText" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/answerBCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/answerBLabel"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="@string/answer_b_label"
                    style="@style/AnswerLabel" />

                <TextView
                    android:id="@+id/answerBTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer A"
                    style="@style/AnswerText" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/answerCCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/answerCLabel"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="@string/answer_c_label"
                    style="@style/AnswerLabel" />

                <TextView
                    android:id="@+id/answerCTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer A"
                    style="@style/AnswerText" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/answerDCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/answerDLabel"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="@string/answer_d_label"
                    style="@style/AnswerLabel" />

                <TextView
                    android:id="@+id/answerDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer A"
                    style="@style/AnswerText" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="7dp"
            app:cardElevation="5dp">


            <EditText
                android:id="@+id/rationaleEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/rationale_hint"
                android:gravity="start"
                android:layout_margin="5dp"
                android:minLines="5"
                android:background="@android:color/transparent"
                android:inputType="textLongMessage|textMultiLine" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:textStyle="bold"
            android:layout_margin="5dp"
            style="@style/Button"/>

    </LinearLayout>

</ScrollView>